<%= form_for @question do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<% if @question.errors.any?
  @question.errors.full_messages.each do |msg| %>
<h3><%= msg %></h3>
  <% end %>
<% end %>
